# Workspaces to monitors
workspace $ws1 output DVI-D-1
workspace $ws2 output DVI-D-1
workspace $ws3 output DVI-D-1
workspace $ws4 output HDMI-1

# Monitors positioning scripts
exec xrandr --output DVI-D-1 --primary
exec xrandr --output HDMI-1 --left-of DVI-D-1 --auto


